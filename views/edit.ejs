<%- include('partials/header'); %>
<div class="ui main container segment">
    <form action="/blogs/<%=blog.id%>?_method=PUT"  method="POST" class="ui form">
        <div class="ui header huge">New Blog</div>
            <div class="field">
              <label>Title</label>
              <input type='text' name='blog[title]' placeholder="TITE" value="<%=blog.title%>">
            </div>
            <div class="field">
              <label>Image</label>
              <input type="text" name='blog[image]' placeholder="IMAGE"  value="<%=blog.image%>">
            </div>
            <div class="field">
              <label>Blog Content</label>
              <textarea name="blog[body]" placeholder="body"><%=blog.body%></textarea>
            </div>
            <div class="field">
              <input type="submit" class="ui violet basic button">
            </div>
    </form>
</div>
<%- include('partials/footer'); %>