<%- include('partials/header'); %>
<div class="ui main text container segment">
       <p class="ui header huge centered"><%=blog.title %></p>
        <div class="item">
            <img class="ui bordered  centered rounded image" src="<%=blog.image%>">
            <p class="content"><%=blog.created.toDateString()%></p>
            <p class="content"><%-blog.body%></p>
        </div>

        <a href="/blogs/<%=blog.id%>/edit" class="ui violet basic button">Edit</a>

        <form id="delete" action="/blogs/<%=blog.id%>?_method=DELETE" method="POST" class="ui form">
            <button type="submit" class="ui violet basic button">Delete</button>
        </form>
</div>
<%- include('partials/footer'); %>