<%- include('partials/header'); %>
<div class="ui main text container">
    <div class="ui main huge header">Restful Blog App</div>
    <div class="ui top atached segment">
        <div class="ui divided items">
            <% for(var i=0;i<blogs.length;i++){%>
                <div class="item">
                    <div class="image">
                        <img src="<%= blogs[i].image%>">
                    </div>
                    <div class="content">
                        <a href="/blogs/<%=blogs[i]._id%>" class="header"><%= blogs[i].title %></a>
                        <div class="meta">
                            <span><%= blogs[i].created.toDateString()%></span>
                        </div>
                        <div class="description">
                            <p><%= blogs[i].body.substring(0,20)%>......</p>
                        </div>
                        <div class="extra">
                            <a href="/blogs/<%=blogs[i]._id%>" class="ui floated basic violet button">More Info</a>
                        </div>
                    </div>
                </div>
            <% }%>
        </div>
    </div>
</div>
<%- include('partials/footer'); %>