<%- include('partials/header'); %>
<div class="ui main container segment">
    <form action="/blogs" method="POST" class="ui form">
        <div class="ui header huge">New Blog</div>
            <div class="field">
              <label>Title</label>
              <input type='text' name='blog[title]' placeholder="TITE">
            </div>
            <div class="field">
              <label>Image</label>
              <input type="text" name='blog[image]' placeholder="IMAGE">
            </div>
            <div class="field">
              <label>Blog Content</label>
              <textarea name="blog[body]" placeholder="body"></textarea>
            </div>
            <div class="field">
              <input type="submit" class="ui violet basic button">
            </div>
    </form>
</div>
<%- include('partials/footer'); %>